<!DOCTYPE html>
<head>
<title>Form</title>
<link href='//fonts.googleapis.com/css?family=Lato:300' rel='stylesheet' type='text/css'>

<!-- import jQuery -->
<script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>

<!-- Google Icon Font -->
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<!-- http://materializecss.com -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js"></script>
<!-- custom JavaScript and CSS -->

<!-- main js file -->
<script src="/../js/main.js"></script>

<!-- main stylesheet -->
<link rel="stylesheet" type="text/css" href="/css/main.css"/>
<!-- random theme -->
<link rel="stylesheet" type="text/css" href="/css/theme_one.css"/>

<script>
$(document).ready(function(){
	$('select').formSelect();
});
</script>

</head>
<body>

<div class="row">
	<form id="mainForm" action="/postForm" method="POST" class="col s12">
        <div class="page" id="page1">
            <div class="row">
				<div class="progress">
					<div class="indeterminate"></div>
				</div>
            </div>	
            <div class="row">
                <div class="input-field col s12">
                    <input id="email" name="email" type="email" class="validate" required>
                    <label for="email">Email</label>
                    <span class="helper-text">Please enter a valid SMU email.</span>
                </div>
            </div>
        </div>

		<div class="page" id="page2">
			<div class="row">
				<div class="input-field col s12">
					<select>
						<option value="" disabled selected>Choose your option</option>
						<option value="1">Option 1</option>
						<option value="2">Option 2</option>
						<option value="3">Option 3</option>
					</select>
					<label>1. How often do you use a desktop or laptop computer?</label>
				</div>
			</div>
	    </div>
	
        <div style="overflow:auto;">
            <div style="float:right;">
                <button class="btn" type="button" id="nextBtn">Next</button>
            </div>
        </div>
    </form>
</div>

<!-- logic for multi-page form behavior -->
<script src="/../js/multi-page-form.js"></script>
</body>
</html>