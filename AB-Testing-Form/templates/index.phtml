<!DOCTYPE html>
<head>
<title>SMU Technology Survey</title>
<link href='//fonts.googleapis.com/css?family=Lato:300' rel='stylesheet' type='text/css'>

<!-- import jQuery -->
<script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>

<!-- Google Icon Font -->
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<!-- http://materializecss.com -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js"></script>
<!-- custom JavaScript and CSS -->

<!-- main js file -->
<script src="/../js/main.js"></script>

<!-- random theme: inherited from materialize.css -->
<link rel="stylesheet" type="text/css" href="/css/theme_one.css"/>
<!-- main stylesheet -->
<link rel="stylesheet" type="text/css" href="/css/main.css"/>

<script>
$(document).ready(function(){
	// initialize select form elements
	$('select').formSelect();

	// note that the user clicked the computer button
	$('#computer-button').click(function() {
		$('#computerButtonClicked').val(true);
	});

});
</script>

<meta name="viewport" content="width=device-width, initial-scale=1">

</head>
<body>
<div class="container z-depth-2">
	<div class="row heading">
		<h3>SMU Technology Survey</h3>
		<a id="computer-button" class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">desktop_mac</i></a>
	</div>
	<form id="mainForm" action="/postForm" method="POST" class="col s12">
		<!-- hidden form values for additional user info -->
		<input id="computerButtonClicked" type="hidden" name="computerButtonClicked" value="false"/>
		<input id="timeToComplete" type="hidden" name="timeToComplete" value="0"/>

        <div class="page" id="page1">            
		    <div class="row">
				<div class="progress">
					<div class="indeterminate"></div>
				</div>
            </div>	
            
		    <div class="row">
               <!--  <div class="input-field col s12 m8">
                    <input id="email" name="email" type="email" class="validate" required>
                    <label for="email">Email</label>
                    <span class="helper-text">Please enter a valid SMU email.</span>
                </div> -->
            </div>
        </div> <!-- end page 1 -->

		<div class="page" id="page2">
			<!-- 1 -->
		    <div class="row section">
		        <h5>How often do you use a desktop or laptop computer?  </h5>
		        <div class="input-field col s12 m8">
		            <select name="1.1">
		                <option value="" disabled selected>Select one</option>
		                <option value="1">More than 5 hours a day</option>
		                <option value="2">Less than 5 hours a day</option>
		                <option value="3">Not everyday</option>
		            </select>
		            <span style="opacity:0;color:#f44336;" class="helper-text">Please select an option.</span>
		        </div>
		    </div>

		    <!-- 2 -->
		    
		    <div class="divider"></div>
		    <div class="row section">
		        <h5>What kind of computer do you own?  </h5>
		        <div class="input-field col s12 m8">
		            <select name="1.2">
		                <option value="" disabled selected>Select one</option>
		                <option value="1">Mac (MacOS/OSX)</option>
		                <option value="2">PC (Windows)</option>
		                <option value="3">Linux</option>
		                <option value="4">I'm not sure.</option>
		                <option value="5">I don't own a computer. </option>
		            </select>
		            <span style="opacity:0;color:#f44336;" class="helper-text">Please select an option.</span>
		        </div>
		    </div>

		    <!-- 3 -->
		    <div class="divider"></div>
		    <div class="row section">
		        <h5>What kind of smartphone do you use? </h5>
		        <div class="input-field col s12 m8">
		            <select name="1.3">
		                <option value="" disabled selected>Select one</option>
		                <option value="1">iPhone</option>
		                <option value="2">Android</option>
		                <option value="3">I don't own a smartphone.</option>
		            </select>
		            <span style="opacity:0;color:#f44336;" class="helper-text">Please select an option.</span>
		        </div>
		    </div>

		    <!-- 4 -->
		    <div class="divider"></div>
		    <div class="row section">
		        <h5>How technologically savy are you? </h5>
		        <div class="input-field col s12 m8">
		            <select name="1.4">
		                <option value="" disabled selected>Select one</option>
		                <option value="1">Expert</option>
		                <option value="2">Intermediate</option>
		                <option value="3">Beginner</option>
		                <option value="4">I'm not sure</option>
		            </select>
		            <span style="opacity:0;color:#f44336;" class="helper-text">Please select an option.</span>
		        </div>
		    </div>

		    <!-- 5 -->
		    
		    <div class="divider"></div>
		    <div class="row section">
		        <h5>How relevant is technology to your major? </h5>
		        <div class="input-field col s12 m8">
		            <select name="1.5">
		                <option value="" disabled selected>Select one</option>
		                <option value="1">Extremely relevant</option>
		                <option value="2">Somewhat relevant</option>
		                <option value="3">Not very relevant</option>
		                <option value="4">Not at all relevant</option>
		            </select>
		            <span style="opacity:0;color:#f44336;" class="helper-text">Please select an option.</span>
		        </div>
		    </div>

		    <!-- 6 -->
		    
		    <div class="divider"></div>
		    <div class="row section">
		        <h5>Which of the following technical tasks are you comfortable doing?</h5>
		        <div class="input-field col s12 m8">
		            <select name="1.6" multiple >
		                <option value="" disabled selected>Select all that apply</option>
		                <option value="1">Typing a paper in Word</option>
		                <option value="2">Using a classroom projector</option>
		                <option value="3">Compiling and running Java code</option>
		                <option value="4">Using the printers in Fondren</option>
		                <option value="5">Buying items online</option>
		                <option value="6">Python list comprehension</option>
		            </select>
		            <span style="opacity:0;color:#f44336;" class="helper-text">Please select an option.</span>
		        </div>
		    </div>

		</div><!-- end page 2 -->

		<div class="page" id="page3">
			<!-- 1 -->
		   
		    <div class="row section">
		        <h5>Which school do you attend?  </h5>
		        <div class="input-field col s12 m8">
		            <select name="2.1">
		                <option value="" disabled selected>Select one</option>
		                <option value="1">Dedman</option>
		                <option value="2">Dedman Law</option>
		                <option value="3">Meadows</option>
		                <option value="4">Cox</option>
		                <option value="5">Lyle</option>
		                <option value="6">Perkins</option>
		                <option value="7">Simmons</option>
		            </select>
		            <span style="opacity:0;color:#f44336;" class="helper-text">Please select an option.</span>
		        </div>
		    </div>

		    <!-- 2 -->
		    
		    <div class="divider"></div>
		    <div class="row section">
		        <h5>What year are you?  </h5>
		        <div class="input-field col s12 m8">
		            <select name="2.2">
		                <option value="" disabled selected>Select one</option>
		                <option value="1">Undergraduate</option>
		                <option value="2">Graduate</option>
		                <option value="3">PhD Candidate</option>
		            </select>
		            <span style="opacity:0;color:#f44336;" class="helper-text">Please select an option.</span>
		        </div>
		    </div>

		    <!-- 3 -->
		    
		    <div class="divider"></div>
		    <div class="row section">
		        <h5>What's your gender?  </h5>
		        <div class="input-field col s12 m8">
		            <select name="2.3">
		                <option value="" disabled selected>Select one</option>
		                <option value="1">Male</option>
